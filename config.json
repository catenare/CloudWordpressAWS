{
  "listeners": {
    "*:8000": {
      "pass": "routes"
    }
  },

  "routes": [
    {
      "match": {
        "uri": ["*.php", "*.php/*", "/wp-admin/"]
      },

      "action": {
        "pass": "applications/wordpress/direct"
      }
    },
    {
      "action": {
        "share": "/www$uri",
        "fallback": {
          "pass": "applications/wordpress/index"
        }
      }
    }
  ],

  "applications": {
    "wordpress": {
      "type": "php",
      "targets": {
        "direct": {
          "root": "/www/"
        },

        "index": {
          "root": "/www/",
          "script": "index.php"
        }
      }
    }
  }
}
