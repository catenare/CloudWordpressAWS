{
  "name": "nziswano/wordpress-docker",
  "description": "Dockerized Wordpress",
  "keywords": [
    "wordpress",
    "blog",
    "cms"
  ],
  "type": "wordpress-core",
  "homepage": "http://www.docfoxapp.com",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "WordPress Community",
      "homepage": "http://wordpress.org/about/"
    },
    {
      "name": "Johan Martin",
      "homepage": "https://www.nziswano.co.za",
      "email": "martin.johan@nziswano.co.za",
      "role": "developer"
    }
  ],
  "support": {
    "email": "info@nziswano.co.za"
  },
  "extra": {
    "wordpress-install-dir": "wordpress",
    "installer-paths": {
      "wordpress/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wordpress/wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ],
      "wordpress/wp-content/mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ]
    }
  },
  "require": {
    "php": ">=8",
    "composer/installers": "*",
    "johnpbloch/wordpress-core-installer": "*",
    "johnpbloch/wordpress-core": "*",
    "wpackagist-plugin/woocommerce": "@stable",
    "wpackagist-plugin/akismet": "*",
    "wpackagist-plugin/jetpack": "*",
    "wpackagist-plugin/cloudinary-image-management-and-manipulation-in-the-cloud-cdn": ">=2.7.5",
    "wp-cli/wp-cli-bundle": "*"
  },
  "require-dev": {
    "wpackagist-plugin/wordpress-reset": "*",
    "wpackagist-plugin/wordpress-importer": "*",
    "wpackagist-plugin/demo-data-creator": "*",
    "wpackagist-plugin/debug": "*",
    "wpackagist-plugin/debug-bar-console": "*",
    "phpmd/phpmd": "@stable",
    "phpunit/phpunit": "*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ]
}
